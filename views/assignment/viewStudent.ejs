<div class="table-responsive">
<table class="table table-striped table-dark">
<!-- ADD STUDENT PAGE -->
<div class="container-fluid bg-dark pt-3 border-bottom"> <!-- Background colors, placement, spacing -->
    <h1 class="h2" >New Student</h1>
        <div>
            <!-- Breadcrumb nav to navigate to back to dashboard -->
            <nav aria-label="breadcrumb" style="color: #fff;">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">DashBoard </a></li> <!-- Previous -->
                    <li class="breadcrumb-item active" style="color: #fff;">New Student</li> <!-- Current -->
                </ol>
            </nav>
        </div>

        <!-- COLUMN HEADER -->
        <thead>
            <tr> <!-- table row for columns -->
                <th scope="col">Student Name</th> <!-- column 1 -->
                <th scope="col">Student ID</th> <!-- column 2 -->
                <th scope="col" class="text-end">Student Action</th> <!-- column 3 -->
            </tr>
        </thead>

        <!-- BODY -->
        <tbody><% students.forEach(student => { %>
            <% if (student.studentName && student.studentNumber) { %> <!-- only displays if both values have -->
              <tr class="align-middle">
                <td><%= student.studentName %></td> <!-- displays values from student schema -->
                <td><%= student.studentNumber %></td> <!-- displays values from student schema -->
                <td class="text-end">
                        <div class="d-flex justify-content-end gap-2"> <!-- button alignment and spacing -->
                          <a href="/editStudent/<%= student._id %>" type="button" class="btn btn-secondary btn-small"> <!-- edit button -->
                            <i class="bi bi-pencil"></i> <!-- pencil icon ... Bootstrap -->
                          </a>
            
                          <form action="/edit/<%= student._id %>?_method=DELETE" method="POST" class="position-relative" onsubmit="return confirm('Are you sure you want to delete this?');"> <!-- confirming for delete student -->
                            <button type="submit" class="btn btn-danger btn-small">
                                <i class="bi bi-trash3"></i> <!-- rubbish icon... Bootstrap -->
                            </button>
                        </form>
                    </div>
                </td>
                </tr>
            <% } %>
            <% }) %>
        </tbody>
    </table>
</div>




